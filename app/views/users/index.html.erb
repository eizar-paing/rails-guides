<% if admin_signed_in? %>
  <h1>Users</h1>

  <div id="users">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <td>Name:</td>
          <td>Email:</td>
          <td>Phone:</td>
          <td>Twitter:</td>
          <%#<td>AdminId:</td>%>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% if user.admin == current_admin %>
            <%= render user %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New user", new_user_path, class: "btn btn-secondary" %>
<% else %>
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
<% end %>
